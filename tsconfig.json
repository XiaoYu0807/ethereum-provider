{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES2020",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ] 
}